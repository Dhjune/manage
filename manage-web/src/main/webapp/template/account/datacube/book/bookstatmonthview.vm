            chart: {
                type: 'column'
            },
            title: {
                text: '漫画日统计'
            },
            subtitle: {
                text: 'Source:  www.fanfan.com'
            },
			exporting: {
				type : "application/pdf",
				filename : "test",
				url : "http://115.236.23.145:8080/highcharts-export-web/"
    		},
            xAxis: {
                categories: xline
            },
            yAxis: {
                min: 0,
                title: {
                    text: '数据统计'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.1f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
			
            series: [{
                name: "点击量",
                data: click_num
    
            },{
                name: "下载量",
                data: down_num
    
            },{
                name: "阅读量",
                data: read_num
    
            },{
                name: "评论量",
                data: comment_num
    
            },{
