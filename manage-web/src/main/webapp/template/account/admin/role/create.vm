<body>
#parse("/layout/top.vm")

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">
    	
    	#parse("/layout/leftsider.html")
		
        <div class="col-xs-13 col-sm-10">
          
			<hr>
			<p class="text-center text-primary">
				<span style="color:blue">添加角色
                </span>
			</p>
			<div class="highlight">
				<p class="text-left text-primary">
				<a href="/manage/admin/role/list" >
					角色列表
				</a>                        				                   
				</p>		
			  <div class="row">
			               		  
			  <br>
				
			      <form role="form" class="form-horizontal" method="post" action="/manage/admin/role/create" >
					<table class="table table-bordered">
						<tr><td>	
					   <input type="hidden" name="token" value="$!{token}">	

					   <input type="hidden" name="pid" value="$!{pid}">
						
					   <div class="form-group">
                        <label for="forpartName" class="col-sm-2 control-label">角色名</label>
                        <div class="col-sm-4">
							
                          <input type="text" name="name" class="form-control"  placeholder="必须填写" >
							
                        </div>
                       </div>
					   
					   										   					   					   					   
					   <div class="form-group" >
                         <label for="forlinkEmail" class="col-sm-2 control-label">状态<span id="forlinkEmail" style="color:red"> </span></label>			 
						  <label class="radio-inline">
                            <input type="radio" name="status" id="status1" value="1" checked>
                                                              使用
                          </label >
                          <label class="radio-inline">
                            <input type="radio" name="status" id="status2" value="0">
                                                             不使用
                          </label>                        
                       </div>						   					  					   						  			 
					   
					   
					   <div class="form-group">
                           <div class="col-sm-offset-2 col-sm-10">
                              <button type="submit" class="btn btn-default"> 提交</button>
                           </div>
                       </div>
						  
					    </td></tr>
			           </table>	
                  </form>
				
				
			   							
			  </div>
			  
			</div>	
			
			
			
       </div>
	   
      </div>  
