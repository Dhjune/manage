<html >
<head>
	
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="../../docs-assets/ico/favicon.png">
	#include("/layout/header.html") 
	<script type="text/javascript" src="/manage/static/js/jquery.json-2.4.js"></script>
	<link rel="stylesheet" type="text/css" href="/manage/static/kindeditor/themes/default/default.css"/>	
	<script charset="utf-8" src="/manage/static/kindeditor/kindeditor.js"></script>
	<script charset="utf-8" src="/manage/static/kindeditor/lang/zh_CN.js"></script>
	<script>
    	KindEditor.ready(function (K) {
         var editor = K.editor({
            allowFileManager: true,
            fileManagerJson: '/manage/ke/filelist',
            uploadJson: '/manage/ke/upload',
            urlType: 'domain',
            
        });								
    	K('#ImageUrlBtn').click(function() {
    		editor.loadPlugin('image', function() {
    			editor.plugin.imageDialog({						
    				imageUrl :  K('#ImageUrlImg').attr('src'),
    				clickFn : function(url, title, width, height, border, align) {
    					K('#ImageUrlImg').attr('src', url);							
    					K('#imageUrl').val(url);					
    					editor.hideDialog();
    				}
    			});
    		});
    	});
    });			
    		
	
	
	</script>			
    <style type="text/css">
        .form_settings
        {
                width: 80%;               
        }
        </style
</head>

<body>
#parse("/layout/top.vm")

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">
    	
    	#parse("/layout/leftsider.html")
		
        <div class="col-xs-13 col-sm-10">
            <div class="bs-example">
				<div class="btn-group">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">漫画推荐<span class="caret"></span></button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/manage/client/recommend/create">添加推荐</a></li>
                  <li><a href="/manage/client/recommend/list">推荐列表</a></li>
                  
                </ul>
              </div>
				
				
              <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">热门搜索<span class="caret"></span></button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/manage/client/hotsearch/create">添加搜索词</a></li>
                  <li><a href="/manage/client/hotsearch/list">搜索列表 </a></li>                 
				  
                </ul>
              </div><!-- /btn-group -->
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">滑块展示<span class="caret"></span></button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/manage/client/slidershow/create">添加滑块</a></li>
				  <li><a href="/manage/client/slidershow/list">滑块列表</a></li>
                  <li class="divider"></li>
                  
                </ul>
              </div>
			   
            </div>
			<hr>
			<p class="text-center text-primary">
				<span style="color:blue">滑块添加
                </span>
			</p>
			<div class="highlight">
				<p class="text-left text-primary">
				<a href="/manage/client/slidershow/list" >
                                  滑块列表 
				</a>                        				                   
				</p>		
			  <div class="row">
			               		  
			  <br>
				
			      <form role="form" class="form-horizontal" method="post" action="/manage/client/slidershow/update" >
					<table class="table table-bordered">
						<tr><td>	
					   <input type="hidden" name="token" value="$!{token}"/>
					   <input type="hidden" name="id" value="$!{slider.id}"/>
					   <input type="hidden" name="dispOrder" value="$!{slider.dispOrder}"/>
					   <div class="form-group">
                         <label for="forHeight" class="col-sm-2 control-label">平台选择</label>
                        <div class="col-sm-5">
                         <select class="col-sm-7" name="platformId" id="platform" >
							 
						    #foreach($platform in $!{platforms})
                              <option value="$!{platform.id}" #if($!{slider.platformId} == $!{platform.id}) selected #end >$!{platform.name}</option>                        
							#end
							
                        </select>
                        </div>
                      </div>
					  				   					   
					   <div class="form-group">
                        <label for="forpartName" class="col-sm-2 control-label">名称</label>
                        <div class="col-sm-4">
                          <input type="text" name="showName" class="form-control" id="showName" placeholder="" value="$!{slider.showName}">
                        </div>
                       </div>
					    <div class="form-group" >
                         <label for="forlinkEmail" class="col-sm-2 control-label">方式<span id="forlinkEmail" style="color:red"> </span></label>			 
						  <label class="radio-inline">
                            <input type="radio" name="showKind" id="showKind1" value="1" #if($!{slider.showKind}==1) checked #end>
                                                              入口
                          </label >
                          <label class="radio-inline">
                            <input type="radio" name="showKind" id="showKind2" value="2" #if($!{slider.showKind}==2) checked #end>
                                                             首页
                          </label>                        
                       </div>
					   
					   <div class="form-group">
                        <label for="forpartName" class="col-sm-2 control-label">显示类别</label>
                        <div class="col-sm-5">
							 <select class="col-sm-7" name="showType" id="showType" >
								<option value="0" #if($!{slider.showType}== 0) selected #end>无</option>
								<option value="1" #if($!{slider.showType}== 1) selected #end>活动信息公告</option>
								<option value="2" #if($!{slider.showType}== 2) selected #end>漫画作品推广</option>
								<option value="3" #if($!{slider.showType}== 3) selected #end>点卷兑换推荐</option>
								<option value="4" #if($!{slider.showType}== 4) selected #end>APP推广</option>									
                              </select>
                        </div>
                       </div>
					   
					    <div class="form-group">
                        <label for="forpartName" class="col-sm-2 control-label">资源ID</label>
                        <div class="col-sm-4">
                          <input type="text" name="refId" class="form-control" id="refId" placeholder="如漫画ID,活动ID," value="$!{slider.refId}" >
                        </div>
                       </div>
					   
					   <div class="form-group">
                        <label for="forpartName" class="col-sm-2 control-label">展示链接</label>
                        <div class="col-sm-4">
                          <input type="text" name="showUrl" class="form-control" id="showUrl" placeholder="" value="$!{slider.showUrl}" >
                        </div>
                       </div>
					   
					  
					   <div class="form-group">
                          <label for="forbriefIntro" class="col-sm-2 control-label">封面大图</label>
						  <div class="col-sm-10">
                          	<button type="button" class="btn btn-mini" id="ImageUrlBtn">选择图片
                            </button>
                            <br>
                            <img id="ImageUrlImg" name="ImageUrlImg" src="$!{slider.imageUrl}"
                                 style="width:240px;height: 120px;" />
                            <input type="hidden" name="imageUrl" id="imageUrl" value="$!{slider.imageUrl}">
						   </div>
                         </div>
					   					   
					   <div class="form-group" >
                         <label for="forlinkEmail" class="col-sm-2 control-label">状态<span id="forlinkEmail" style="color:red"> </span></label>			 
						  <label class="radio-inline">
                            <input type="radio" name="status" id="status1" value="1" #if($!{slider.status}==1) checked #end>
                                                              使用
                          </label >
                          <label class="radio-inline">
                            <input type="radio" name="status" id="status2" value="0" #if($!{slider.status}==0) checked #end>
                                                             不使用
                          </label>                        
                       </div>	
					   					  					   						  		   
					   <div class="form-group">
                           <div class="col-sm-offset-2 col-sm-10">
                              <button type="submit" class="btn btn-default"> 提交</button>
                           </div>
                       </div>
						  
					    </td></tr>
			           </table>	
                  </form>
											   							
			  </div>
			  
			</div>	
									
       </div>
	   
      </div>  
    <hr>

    <footer>
        <p>&copy; Company 2013</p>
    </footer>

</div>

</body>
</html>